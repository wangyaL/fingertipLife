<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/home_00"
    tools:context=".LoginActivity" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_login" >

    <EditText
        android:id="@+id/login_name"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/login_name"
        android:layout_marginTop="48dp"
        android:text="密    码："
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@color/blue_custom"
        android:gravity="center" />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/login_name"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:background="@color/blue_custom"
        android:text="用户名："
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/mediumblue"
        android:text="登  录"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <CheckBox
        android:id="@+id/cb_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="记住密码"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/cb_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_mima"
        android:layout_alignBottom="@+id/cb_mima"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="自动登录"
        android:textColor="#000000" />

</RelativeLayout>
</ScrollView>