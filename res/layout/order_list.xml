<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:background="@color/white" 
    >

    <TextView
        android:id="@+id/order_list_username"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="用户名" />

    <TextView
        android:id="@+id/order_list_phone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/order_list_username"
        android:gravity="center"
        android:text="15988483265" />

    <TextView
        android:id="@+id/order_list_time"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/order_list_username"
        android:layout_below="@+id/order_list_username"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:text="下单时间"
        android:textColor="@color/dimgrey" />

	<TextView
	    android:id="@+id/order_list_timeshow"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_alignBaseline="@+id/order_list_time"
	    android:layout_alignBottom="@+id/order_list_time"
	    android:layout_toRightOf="@+id/order_list_time"
	    android:gravity="center"
	    android:text="2014-05-15" />

</RelativeLayout> 